package  {		import flash.display.MovieClip;	import flash.events.*;	import flash.geom.ColorTransform;		import fl.transitions.Tween;    import fl.transitions.easing.*;    import fl.transitions.TweenEvent;		import Main;			public class Ball extends MovieClip {				var game:Main;				public function Ball() {			// constructor code						this.addEventListener(MouseEvent.MOUSE_DOWN,handleMouseDown); 			//this.game = parent;		}								function handleMouseDown(event:MouseEvent):void 		{			changeColor();			changePosition();			restartAnimation();									//var indicator:Indicator = (Indicator)(parent.getChildByName("indicator"));			//indicator.changeColor();		}				function changeColor() {						var whichColor = generateRandomNumber(1,10);						var myColorTransform = new ColorTransform();			switch(whichColor) {			    case 1: myColorTransform.color = 0xff0000; break;				case 2: myColorTransform.color = 0x00ff00; break;				case 3: myColorTransform.color = 0x0000ff; break;				case 4: myColorTransform.color = 0xffff00; break;				case 5: myColorTransform.color = 0xff00ff; break;				case 6: myColorTransform.color = 0x00ffff; break;				case 7: myColorTransform.color = 0xaaaa00; break;				case 8: myColorTransform.color = 0xaa00aa; break;				case 9: myColorTransform.color = 0x00aaaa; break;				case 10: myColorTransform.color = 0xcccccc; break;			}						this.transform.colorTransform = myColorTransform; 					}				function changePosition() {			x = generateRandomNumber(1, 260);			y = generateRandomNumber(1, 380);		}				function restartAnimation() {						var ball:Ball = (Ball)(parent.getChildByName("ball"));						var myTween:Tween = new Tween(ball, "width", None.easeNone, 1, 100, 1, true);			var myTween:Tween = new Tween(ball, "height", None.easeNone, 1, 100, 1, true);						//ball.gotoAndPlay(1);					}				function generateRandomNumber(low:Number = 0, high:Number = 1):Number	    {            return Math.floor(Math.random() * (1 + high - low)) + low;	    }	}	}